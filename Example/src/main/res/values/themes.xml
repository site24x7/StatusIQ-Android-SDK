<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.BOTTOM_BAR_REVAMP" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="itemBackground">@color/white</item>
    </style>

    <style name="Theme.StatusIQSDK" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/navigation_green</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>